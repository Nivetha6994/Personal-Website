@using Project1.Models
@model Project1.Models.Project

@{
    ViewData["Title"] = "CreateProject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="color:#d04261;">Create Project Entry</h1>

<h4 style="color:#d04261;">Enter Valid Inputs</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateProject">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Technology" class="control-label"></label>
                <input asp-for="Technology" class="form-control" />
                <span asp-validation-for="Technology" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div>
                <label>Project Type:</label>
    @*@Html.DropDownList("ProjectTypeDDL", "")
                @Html.DropDownList("ProjectTypeDDL",
        new SelectList(Enum.GetValues(typeof(ProjectType)),"type", "type"))*@
    @Html.DropDownListFor(m => m.ptype,
        new SelectList(Enum.GetValues(typeof(ProjectType))),
        "Select type")
    @Html.ValidationMessageFor(model => model.ptype)
</div>
            <div class="form-group" style="text-align:center">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<spacer-35></spacer-35>
<div style="float:right;color:#d04261;">
    Link:<a asp-action="Project">Back to Project List</a>
</div>


@model Project1.Models.FileData

@{
    ViewData["Title"] = "CreateFile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="color:#d04261;">Documents</h1>
<h4 style="color:#d04261;">Enter Valid Inputs</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @if (User.IsInRole("Admin"))
        {
        <form name="FileContent" asp-action="Upload" asp-controller="FileUpload" method="post"
              enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FileDescription" class="control-label"></label>
                <input name="DescriptionF" asp-for="FileDescription" class="form-control" style="overflow-x:auto"/>
                <span asp-validation-for="FileDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                Browse
                <input type="file" name="file" />
            </div>
            <div>
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        }
    </div>
</div>

<div style="float:right;color:#d04261;">
    Link:<a asp-action="File" asp-controller="FileUpload">Back to Document List</a>
</div>

